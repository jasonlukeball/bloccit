<% if topic.errors.any? %>
    <%= display_errors(pluralize(topic.errors.count, 'error'), topic.errors.full_messages) %>
<% end %>


<%= form_for topic do |f| %>
    <%= form_group_tag(topic.errors[:name]) do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
    <% end %>
    <%= form_group_tag(topic.errors[:description]) do %>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
    <% end %>
    <div class="form-group">
      <%= f.check_box :public %>
      <%= f.label "Public topic" %>
    </div>
    <div class="form-group">
      <%= render partial: 'labels/form', locals: {f: f, labels: topic.labels} %>
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>