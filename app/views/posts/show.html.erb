<h1><%= @post.title%></h1>
<small>
  <b><%= @post.user.name %></b>
  <br>
  submitted <%= time_ago_in_words(@post.created_at) %> ago
</small>

<div class="row">
  <div class="col-md-8">
    <br>
    <p><%= @post.body%></p>
    <%= link_to "< Back to Topic", topic_path(@post.topic.id) %>
  </div>
  <div class="col-md-4">
    <% if user_is_authorised_for_post?(@post) %>
        <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
        <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
    <% end %>
  </div>
</div>



