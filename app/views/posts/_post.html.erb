<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post.title, topic_post_path(post.topic, post) %>
      <%= render partial: "labels/list", locals: { labels: post.labels } %>
    </h4>
    <small>
      <b><%= post.user.name %></b> submitted <%= time_ago_in_words(post.created_at) %> ago
      <br>
      <%= pluralize(post.comments.count, 'Comment', 'Comments') %>
    </small>
  </div>
</div>