<div class="row">
  <div class="col-md-8">
    <h1><%= @label.name %></h1>
    <br>
    <h4>Topics</h4>
    <% @label.topics.each do |topic| %>
        <div>
          <%= link_to topic.name, topic %>
        </div>
    <% end %>
    <br>
    <h4>Posts</h4>
    <% @label.posts.each do |post| %>
        <div>
          <%= link_to post.title, [post.topic, post] %>
        </div>
    <% end %>

  </div>
</div>