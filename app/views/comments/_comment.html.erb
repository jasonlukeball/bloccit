<div class="media">
  <div class="media-body">
    <small>
      <b><%= comment.user.name %></b>
      <%= " commented #{time_ago_in_words(comment.created_at)} ago" %>
      <% if user_can_delete_comment?(comment) %>
        | <%= link_to "Delete", post_comment_path(comment.post.id, comment), method: :delete %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
</div>